@model Presentation.Models.ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
   // Layout = "~/Views/Shared/_LayoutUnAuth.cshtml";

}

<!-- Material form subscription -->
<div class="card">

    <h5 class="card-header info-color white-text text-center py-4 FMCDemo-gradient">
        <strong>Reset Password</strong>
    </h5>
    <!--Card content-->
    <div class="card-body px-lg-5">

        <form method="post" asp-controller="Account" asp-action="UpdatePassword">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="@Model.Code" type="hidden" />
            <div class="form-group">
                <label asp-for="@Model.Email"></label>
                <input asp-for="@Model.Email" type="email" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password"></label>
                <input asp-for="@Model.Password" class="form-control" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ConfirmPassword"></label>
                <input asp-for="@Model.ConfirmPassword" class="form-control" />
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-blue-grey btn-rounded btn-block z-depth-0 my-4 waves-effect">Reset</button>
            </div>
        </form>
        <!-- Form -->

    </div>

</div>
<!-- Material form subscription -->




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
